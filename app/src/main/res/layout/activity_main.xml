<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="16sp"
        android:text="Multiply your security"
        android:layout_gravity="center"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAuthNew"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Create"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textAllCaps="false"/>
        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Restore"
            android:layout_height="wrap_content"
            android:id="@+id/btnAuthRestore"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="12sp"
            android:linksClickable="false"
            android:textColorLink="@color/colorPrimary"
            android:text="First time user? See our Help section"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTermsAndPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="12sp"
        android:textColorLink="@color/colorPrimary"
        android:text="By registering you agree to our Terms of Service and Privacy Policy"/>
</LinearLayout>